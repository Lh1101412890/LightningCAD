<local:ViewBase x:Class="LightningCAD.Views.LBLineView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightningCAD.Views"
        Title="折断线">
    <Grid>
        <Label Content="符号比例" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="symbol" HorizontalAlignment="Left" Margin="73,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46">0.02</TextBox>

        <Label Content="延伸比例" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="extend" HorizontalAlignment="Left" Margin="73,44,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46">1.1</TextBox>

        <Button Content="开始绘制" HorizontalAlignment="Center" Margin="0,70,0,10" Width="100" Height="25" VerticalAlignment="Top" Click="DrawingButton_Click"/>
    </Grid>
</local:ViewBase>
