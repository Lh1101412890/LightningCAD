<local:ViewBase x:Class="LightningCAD.Views.DRBeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightningCAD.Views"
             Title="结构梁识别">
    <Grid Width="300">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition MinHeight="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Header="墙、柱至少选一项" Margin="2,2,2,0" Grid.Row="0">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="0,10,0,0" TextWrapping="Wrap" Text="柱线图层" VerticalAlignment="Top"/>
                <TextBox Name="columnBox" HorizontalAlignment="Center" Margin="-7,10,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="175"/>
                <Button Content="点选柱线" HorizontalAlignment="Right" Margin="0,10,0,0" VerticalAlignment="Top" Width="55" Height="18" Click="Layer_Click"/>

                <TextBlock HorizontalAlignment="Left" Margin="0,30,0,0" TextWrapping="Wrap" Text="墙线图层" VerticalAlignment="Top"/>
                <TextBox Name="wallBox" HorizontalAlignment="Center" Margin="-7,30,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="175"/>
                <Button Content="点选墙线" HorizontalAlignment="Right" Margin="0,30,0,0" VerticalAlignment="Top" Width="55" Height="18" Click="Layer_Click"/>

                <TextBlock HorizontalAlignment="Left" Margin="0,50,0,0" TextWrapping="Wrap" Text="最大墙厚" VerticalAlignment="Top"/>
                <TextBox Name="wallmax" HorizontalAlignment="Center" Margin="-7,50,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="175" Text="350"/>

                <TextBlock HorizontalAlignment="Left" Margin="0,70,0,0" TextWrapping="Wrap" Text="梁线图层" VerticalAlignment="Top"/>
                <TextBox Name="beamBox" HorizontalAlignment="Center" Margin="-7,70,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="175"/>
                <Button Content="点选梁线" HorizontalAlignment="Right" Margin="0,70,0,0" VerticalAlignment="Top" Width="55" Height="18" Click="Layer_Click"/>
            </Grid>
        </GroupBox>

        <WrapPanel Grid.Row="2" VerticalAlignment="Center">
            <Button Grid.Row="3" Content="范围" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="32" Click="Range_Click"></Button>
            <Button Grid.Row="3" Content="恢复" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="32" Click="Visible_Click"></Button>
            <Button Grid.Row="3" Content="隐藏" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="32" Click="Hidden_Click"></Button>
            <Button Grid.Row="3" Content="清空" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="32" Click="Clear_Click"></Button>
            <Button Grid.Row="3" Content="识别" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="32" Click="Recognize_Click"></Button>
            <Button Grid.Row="3" Content="梁尺寸统计" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="65" Click="BeamsSize_Click"></Button>
            <Button Grid.Row="3" Content="导出" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5,0,0,0" Width="35" Click="Export_Click"></Button>
        </WrapPanel>

        <Grid Grid.Row="3">
            <TextBox IsReadOnly="True" Name="info" HorizontalAlignment="Left" Height="20" AcceptsReturn="True" Margin="5,5,0,5" TextWrapping="Wrap" Text="KL1(2) 200x500" VerticalAlignment="Top" Width="160"/>
            <TextBlock HorizontalAlignment="Left" Margin="170,7,0,5" TextWrapping="Wrap" Text="梁名称" VerticalAlignment="Top"/>
            <TextBox Name="code" HorizontalAlignment="Left" Margin="210,6,0,5" TextWrapping="Wrap" Text="KL1" VerticalAlignment="Top" Width="40"/>
            <Button Content="查找" HorizontalAlignment="Left" Margin="255,5,0,5" VerticalAlignment="Top" Width="35" Click="Button_Click"/>
        </Grid>
    </Grid>
</local:ViewBase>